<?xml version="1.0" encoding="utf-8"?>
<com.seachange.healthandsafty.helper.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.seachange.healthandsafty.helper.SquareRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@color/colorDefaultGreen"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gallery_image_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:textSize="13dp"
            android:textColor="@color/sysWhite"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/text_margin"
            android:textAppearance="?attr/textAppearanceListItem" />

    </com.seachange.healthandsafty.helper.SquareRelativeLayout>
</com.seachange.healthandsafty.helper.SquareRelativeLayout>
