<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="80dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nfc_setup_zone_title_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deli"
            android:textSize="20dp"
            android:textColor="@color/alertTitle" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/a_tag"
                style="@style/SubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/alertContent" />

            <TextView
                android:id="@+id/a_tag_icon"
                style="@style/SubHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_tab_play"
                android:layout_marginStart="3dp"
                android:textColor="@color/alertContent" />

            <TextView
                android:id="@+id/b_tag"
                style="@style/SubHeader"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"
                android:textColor="@color/alertContent" />

            <TextView
                android:id="@+id/b_tag_icon"
                style="@style/SubHeader"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_tab_play"
                android:textColor="@color/alertContent" />

            <TextView
                android:id="@+id/nfc_setup_tick_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorDefaultGreen"
                android:layout_marginStart="8dp"
                android:text="@string/fa_check" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/nfc_setup_cloud"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="@string/fa_cloud_off"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/nfc_setup_check_icon"/>

    <ImageView
        android:id="@+id/nfc_setup_cloud_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        app:srcCompat="@drawable/ic_cloud_unsync_unset"
        android:layout_toStartOf="@+id/nfc_setup_check_icon"/>

    <TextView
        android:id="@+id/nfc_setup_check_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="@string/fa_right_arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/alertTitle"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:textSize="30dp" />


</RelativeLayout>